doctype html
html
  head
    title= title

    // Latest compiled and minified CSS
    link(rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" integrity="sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7" crossorigin="anonymous")

    // Optional theme
    link(rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap-theme.min.css" integrity="sha384-fLW2N01lMqjakBkx3l/M9EahuwpSfeNvV63J5ezn3uZzapT0u7EYsXMjQV+0En5r" crossorigin="anonymous")

    // latest compiled and minified javascript
    script(src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js" integrity="sha384-0mSbJDEHialfmuBBQP6A4Qrprq5OVfW37PRR3j5ELqxss1yVqOtnepnHVP9aJ7xS" crossorigin="anonymous")

    link(rel='stylesheet', href='/css/style.css')
  body

    // top nav bar
    nav.navbar.navbar-inverse.navbar-fixed-top
        .container-fluid
            .navbar-header
                button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar', aria-expanded='false', aria-controls='navbar')
                    // screen-reader only
                    span.sr-only Toggle navigation
                    // when smaller window, the navigation has 3 lines, these are the three lines
                    span.icon-bar
                    span.icon-bar
                    span.icon-bar
                a.navbar-brand(href='/') Papercuts
            #navbar.navbar-collapse.collapse
                ul.nav.navbar-nav.navbar-right
                    if locals.user
                        li
                            a(href="/logout") Logout
                        li
                            a(href='/me') locals.user.name
                        li
                            a(href='/help') Help
                    else
                        li
                            a(href="/auth/oauth2") CERN Login
                form.navbar-form.navbar-right
                    input.form-control(type='text', placeholder='Analysis...')

    // below navbar
    .container-fluid
        .row
            // left nav bar
            .col-sm-3.col-md-2.sidebar
                ul.nav.nav-sidebar
                    li.active
                        a(href='#')
                            | Overview
                            span.sr-only (current)
                    li
                        a(href='#') Reports
                    li
                        a(href='#') Analytics
                ul.nav.nav-sidebar
                    li
                        a(href='') Nav item
                    li
                        a(href='') Nav item again
                    li
                        a(href='') One more nav
                    li
                        a(href='') Another nav item
                    li
                        a(href='') More navigation
                ul.nav.nav-sidebar
                    li
                        a(href='') Nav item again
                    li
                         a(href='') One more nav
                    li
                        a(href='') Another nav item

            // right side (main content)
            .col-sm-9.col-sm-offset-3.col-md-10.col-md-offset-2.main
                h1.page-header= title
                block content
